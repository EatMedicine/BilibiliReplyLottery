@using BilibiliReplyLottery.Models;
@{
    Layout = null;
    LotteryReady LotteryData = ViewBag.LotteryData;
    List<LotteryResult> resultData = ViewBag.ResultData;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Lottery.css" />
    <script src="~/bootstrap/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">Bilibili评论抽奖系统</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <h4>抽奖结果：</h4><br />
                <p>本次评论抽奖视频av号为：</p>@LotteryData.AvNum
                <p>总共要抽取<span>@LotteryData.LotteryNum</span>个人</p>
                <p>成功抽取了<span>@resultData.Count</span>个人</p>
                <p>以下是中奖人列表：</p>
            </div>
        </div>
        @foreach (LotteryResult result in resultData)
        {
            string url = "http://space.bilibili.com/" + result.mid;
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 border-style">
                    <div class="row">
                        <div class="col-lg-12">
                            <a target="_blank" href="@url"><p>@result.Name</p></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>mid：@result.mid</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>楼层数：@result.LotteryFloor</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>评论内容：@result.Msg</p>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>
